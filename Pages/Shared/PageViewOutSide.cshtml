<div class="btn-group" id="kopage">
    <button type="button" data-bind="ifnot:isfirstindex,click:function(){clickcall(1)},clickBubble: false" class="btn btn-white">
        Prev   <i class="fa fa-chevron-left"></i>
    </button>
    <!-- ko foreach:list -->
    <button class="btn btn-white " data-bind="text:$data,css:{'active': $parent.index()==$data},click:function(){$parent.clickcall($data)},clickBubble: false"> 0 </button>
    <!-- /ko -->
    <button type="button" data-bind="ifnot:islastindex,click:function(){clickcall(index()+1)},clickBubble: false" class="btn btn-white">
        Next  <i class="fa fa-chevron-right"></i>
    </button>
</div>
